<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    >
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="30dp"
            android:viewportWidth="24"
            android:viewportHeight="30"
            >
            <group android:name="bounce_group">
                <group android:name="lid_group">
                    <path
                        android:name="lid"
                        android:pathData="M 19 10 L 15.5 10 L 14.5 9 L 9.5 9 L 8.5 10 L 5 10 L 5 12 L 19 12"
                        android:fillColor="#000"
                        android:strokeWidth="1"
                        />
                </group>
                <path
                    android:name="bin"
                    android:pathData="M 6 25 C 6 25.53 6.211 26.039 6.586 26.414 C 6.961 26.789 7.47 27 8 27 L 16 27 C 16.53 27 17.039 26.789 17.414 26.414 C 17.789 26.039 18 25.53 18 25 L 18 13 L 6 13 Z"
                    android:fillColor="#000"
                    android:strokeWidth="1"
                    />
            </group>
        </vector>
    </aapt:attr>
    <target android:name="lid_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="275"
                    android:valueFrom="0"
                    android:valueTo="-2"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/accelerate_interpolator"
                    />
                <objectAnimator
                    android:propertyName="translateY"
                    android:startOffset="475"
                    android:duration="275"
                    android:valueFrom="-2"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"
                    />
                <objectAnimator
                    android:propertyName="pivotX"
                    android:duration="1000"
                    android:valueFrom="0"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/linear_interpolator"
                    />
                <objectAnimator
                    android:propertyName="pivotY"
                    android:duration="1000"
                    android:valueFrom="12"
                    android:valueTo="12"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/accelerate_interpolator"
                    />
                <objectAnimator
                    android:propertyName="rotation"
                    android:startOffset="50"
                    android:duration="200"
                    android:valueFrom="0"
                    android:valueTo="-5"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/accelerate_interpolator"
                    />
                <objectAnimator
                    android:propertyName="rotation"
                    android:startOffset="450"
                    android:duration="200"
                    android:valueFrom="-5"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"
                    />
            </set>
        </aapt:attr>
    </target>
    <target android:name="bounce_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="translateY"
                    android:startOffset="850"
                    android:duration="150"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/accelerate_interpolator"
                    />
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="200"
                    android:valueFrom="0"
                    android:valueTo="-1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/accelerate_interpolator"
                    />
                <objectAnimator
                    android:propertyName="translateY"
                    android:startOffset="400"
                    android:duration="400"
                    android:valueFrom="-1"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"
                    />
            </set>
        </aapt:attr>
    </target>
</animated-vector>
